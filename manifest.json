{
    "manifest_version": 2,
    "name": "Page Todo",
    "description": "Add todos to different web page (recognized by url)",
    "version": "0.0.1",
    "author": "shavenking@gmail.com",
    "homepage_url": "http://github.com/shavenking/chrome-page-todo",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Page Todo"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}
